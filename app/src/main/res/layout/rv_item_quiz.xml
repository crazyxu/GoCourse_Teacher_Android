<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    app:cardCornerRadius="4dp"
    android:layout_margin="4dp"
    android:layout_marginBottom="3dp"
    android:layout_marginTop="3dp"
    android:scrollbars="vertical"
    app:cardBackgroundColor="?attr/defCvBgColor"
    android:id="@+id/quiz_rv_item"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_margin="3dp">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="13"
            android:layout_gravity="center_vertical">
            <TextView
                android:id="@+id/tv_quiz_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="?attr/defTextColor"
                android:lines="2"
                android:textSize="16dp"
                android:layout_marginBottom="5dp"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="1dp">
                <TextView
                    android:id="@+id/tv_quiz_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="?attr/defTextColor"
                    android:textSize="14dp"/>
                <TextView
                    android:id="@+id/tv_quiz_index"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:textColor="?attr/defTextColor"
                    android:textSize="14dp"/>
            </LinearLayout>
            <TextView
                android:id="@+id/tv_quiz_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="?attr/defTextColor"
                android:textSize="14dp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="3"
            android:gravity="center_horizontal"
            android:layout_gravity="center_vertical">
            <TextView
                android:id="@+id/tv_quiz_reply"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="5dp"/>
            <Button
                android:id="@+id/btn_quiz_status"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:background="@color/quiz_btn_share"
                android:layout_marginBottom="5dp"/>
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>
