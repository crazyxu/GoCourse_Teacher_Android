<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:cardCornerRadius="4dp"
    android:layout_margin="2dp"
    app:cardBackgroundColor="?attr/defCvBgColor"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_margin="3dp">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_gravity="center_vertical"
            >
            <!--上课节次-->
            <TextView
                android:id="@+id/tv_course_section"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="?attr/defSmallTextColor"
                android:textSize="15dp"
                android:layout_marginBottom="5dp"/>

            <!--节次时间范围-->
            <TextView
                android:id="@+id/tv_section_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="?attr/defSmallTextColor"
                android:textSize="15dp"/>
        </LinearLayout>

        <!--分割线-->
        <View
            android:layout_width="1dp"
            android:layout_height="fill_parent"
            android:background="@color/grey_course_cut_line"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:paddingTop="25dp"
            android:paddingBottom="25dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <!--课程名称-->
            <TextView
                android:id="@+id/tv_course_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="?attr/defTextColor"
                android:textSize="20dp"
                android:layout_marginBottom="2dp"/>
            <!--上课地点-->
            <TextView
                android:id="@+id/tv_course_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="?attr/defTextColor"
                android:layout_marginBottom="2dp"
                android:textSize="15dp"/>
            <!--上课班级-->
            <TextView
                android:id="@+id/tv_course_classes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="?attr/defTextColor"
                android:textSize="15dp"/>

        </LinearLayout>

    </LinearLayout>
</android.support.v7.widget.CardView>